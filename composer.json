{
    "name": "EpicArrow/phoenix_music",
    "description": "Phoenix Music",
    "keywords": [
        "portfolio",
        "phoenix music",
        "posts",
        "publishing",
        "platform",
        "laravel",
        "markdown",
        "developers"
    ],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Ferdinand Frank",
            "email": "ferdinand-frank@web.de"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.4.*",
        "doctrine/dbal": "^2.5",
        "maatwebsite/excel": "~2.1.0",
        "talvbansal/media-manager": "^2.0",
        "barryvdh/laravel-ide-helper": "^2.2",
        "martinlindhe/laravel-vue-i18n-generator": "^0.1.10",
        "guzzlehttp/guzzle": "^6.2",
        "intervention/image": "^2.3",
        "epicarrow/vue-forms": "^1.1.5",
        "epicarrow/git-changelog": "^1.2",
        "kyslik/column-sortable": "^5.4",
        "laravel/tinker": "^1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "laravel/dusk": "^1.0",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan ide-helper:generate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
